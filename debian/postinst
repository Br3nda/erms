#! /bin/sh
# postinst script for erms
#
# see: dh_installdeb(1)

set -e

# Source debconf library.
. /usr/share/debconf/confmodule

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

       [ -f "/etc/default/erms" ] && . /etc/default/erms
     
       # Sane defaults:
     
       [ -z "$ERMS_HOME" ] && ERMS_HOME=/usr/share/erms
       [ -z "$ERMS_USER" ] && ERMS_USER=erms
       [ -z "$ERMS_OWNER" ] && ERMS_OWNER=erms-adm
       [ -z "$ERMS_NAME" ] && ERMS_NAME="ERMS SMS routing system"
       [ -z "$ERMS_GROUP" ] && ERMS_GROUP=erms
       COOKIE_SALT="xEdyOdmu"
       # Cookie salted so we get a stable one.

case "$1" in
    configure)
        echo -n "Changing ownership of ${ERMS_HOME} to ${ERMS_OWNER}:${ERMS_GROUP}..."
        chown -R $ERMS_OWNER:$ERMS_GROUP $ERMS_HOME
        chmod -R o+r $ERMS_HOME/{lib,releases}
        echo "done."
        echo -n "Changing ownership of ${ERMS_HOME}/priv to ${ERMS_USER}:${ERMS_GROUP}..."
        chown -R $ERMS_USER:$ERMS_GROUP /var/lib/erms        
        chown $ERMS_OWNER /var/lib/erms/erms.config
        chown -R $ERMS_USER:$ERMS_GROUP /var/lib/erms/db
        chown -R $ERMS_USER:$ERMS_GROUP /var/lib/erms/log
        echo "done."       

        echo -n "Setting up the erlang node cookie..."
        db_input medium erms/cookie || true
        db_go
        db_get erms/cookie
        openssl passwd -1 -salt ${COOKIE_SALT} -noverify "$RET" > ${ERMS_HOME}/.erlang.cookie
        chown $ERMS_USER ${ERMS_HOME}/.erlang.cookie
        chmod 400 ${ERMS_HOME}/.erlang.cookie
        echo done
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


