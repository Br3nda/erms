#! /bin/sh
# preinst script for erms
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
#
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    install|upgrade)
       # If the package has default file it could be sourced, so that
       # the local admin can overwrite the defaults
     
       [ -f "/etc/default/erms" ] && . /etc/default/erms
     
       # Sane defaults:
     
       [ -z "$ERMS_HOME" ] && ERMS_HOME=/usr/share/erms
       [ -z "$ERMS_USER" ] && ERMS_USER=erms
       [ -z "$ERMS_OWNER" ] && ERMS_OWNER=erms-adm
       [ -z "$ERMS_NAME" ] && ERMS_NAME="ERMS SMS routing system"
       [ -z "$ERMS_GROUP" ] && ERMS_GROUP=erms
     
       # Groups that the user will be added to, if undefined, then none.
       ADDGROUP=$ERMS_GROUP
     
       # create user to avoid running server as root
       # 1. create group if not existing
       if ! getent group | grep -q "^$ERMS_GROUP:" ; then
          echo -n "Adding group $ERMS_GROUP.."
          addgroup --system --quiet $ERMS_GROUP 2>/dev/null ||true
          echo "..done"
       fi
       # 2. create homedir if not existing
       test -d $ERMS_HOME || mkdir $ERMS_HOME
       # 3. create user if not existing
       if ! getent passwd | grep -q "^$ERMS_USER:"; then
         echo -n "Adding system user $ERMS_USER.."
         adduser --system \
                 --quiet \
                 --gecos "$ERMS_NAME system" \
                 --ingroup $ERMS_GROUP \
                 --home $ERMS_HOME \
                 --no-create-home \
                 --disabled-password \
                 --shell /bin/bash \
                 $ERMS_USER 2>/dev/null || true
         echo "..done"
       fi
       if ! getent passwd | grep -q "^$ERMS_OWNER:"; then
         echo -n "Adding system user $ERMS_OWNER.."
         adduser --system \
                 --quiet \
                 --gecos "$ERMS_NAME owner" \
                 --ingroup $ERMS_GROUP \
                 --home $ERMS_HOME \
                 --no-create-home \
                 --disabled-password \
                 $ERMS_OWNER 2>/dev/null || true
         echo "..done"
       fi
       # 5. adjust file and directory permissions
       if ! dpkg-statoverride --list $ERMS_HOME >/dev/null
       then
           chown -R $ERMS_OWNER:$ERMS_GROUP $ERMS_HOME
           chmod u=rwx,g=rxs,o= $ERMS_HOME
       fi
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


